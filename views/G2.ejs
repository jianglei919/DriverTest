<!DOCTYPE html>
<html lang="en">

    <%- include('layouts/header'); -%>

    <body>

        <%- include('layouts/navbar'); -%>

        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/assets/img/G2-DriveTest-bg.webp')">

        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container">
                <h2>G2 Drive Test Application</h2>
                <form id="g2TestForm" action="/g2/store" method="post">
                    <div class="form-group">
                        <h4>Personal Information</h4>
                        <% if (isDefaultInfo) { %>
                        <label for="firstname">First Name:</label>
                        <input type="text" class="form-control" id="firstname" placeholder="Enter first name" name="firstname" required>
                        
                        <label for="lastname">Last Name:</label>
                        <input type="text" class="form-control" id="lastname" placeholder="Enter last name" name="lastname" required>
            
                        <label for="LicenseNo">License Number:</label>
                        <input type="text" class="form-control" id="LicenseNo" placeholder="Enter license number" name="LicenseNo" maxlength="8" required>
            
                        <label for="Age">Age:</label>
                        <input type="number" class="form-control" id="Age" placeholder="Enter age" name="Age" required>
                        <% } else { %>
                        <label for="firstname">First Name:</label>
                        <input type="text" class="form-control" id="firstname" name="firstname" value="<%= driverInfo.firstname %>" disabled>
                        
                        <label for="lastname">Last Name:</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" value="<%= driverInfo.lastname %>" disabled>
            
                        <label for="LicenseNo">License Number:</label>
                        <input type="text" class="form-control" id="LicenseNo" name="LicenseNo" value="<%= driverInfo.LicenseNo %>" disabled>
            
                        <label for="Age">Age:</label>
                        <input type="number" class="form-control" id="Age" name="Age" value="<%= driverInfo.Age %>" disabled>
                        <% } %>
                    </div>
            
                    <br>

                    <div class="form-group">
                        <h4>Car Information</h4>
                        <% if (isDefaultInfo) { %>
                        <label for="make">Make:</label>
                        <input type="text" class="form-control" id="make" placeholder="Enter car make" name="car_details[make]" required>
            
                        <label for="model">Model:</label>
                        <input type="text" class="form-control" id="model" placeholder="Enter car model" name="car_details[model]" required>
            
                        <label for="year">Year:</label>
                        <input type="number" class="form-control" id="year" placeholder="Enter car year" name="car_details[year]" required>
            
                        <label for="platno">Plate Number:</label>
                        <input type="text" class="form-control" id="platno" placeholder="Enter plate number" name="car_details[platno]" required>
                        <% } else { %>
                        <label for="make">Make:</label>
                        <input type="text" class="form-control" id="make" placeholder="Enter car make" name="car_details[make]" value="<%= driverInfo.car_details.make %>">
            
                        <label for="model">Model:</label>
                        <input type="text" class="form-control" id="model" placeholder="Enter car model" name="car_details[model]" value="<%= driverInfo.car_details.model %>">
            
                        <label for="year">Year:</label>
                        <input type="number" class="form-control" id="year" placeholder="Enter car year" name="car_details[year]" value="<%= driverInfo.car_details.year %>">
            
                        <label for="platno">Plate Number:</label>
                        <input type="text" class="form-control" id="platno" placeholder="Enter plate number" name="car_details[platno]" value="<%= driverInfo.car_details.platno %>">
                        <% } %>    
                    </div>

                    <br>

                    <div class="form-group">
                        <% if (!isDefaultInfo) { %>
                            <h4>Appointment Information</h4>
                            <input type="text" id="AppointmentId" name="AppointmentId" value="<%= appointmentInfo._id %>" style="display: none;"/>
                            <label for="date">Date:</label>
                            <input type="date" name="date" id="date" class="form-control" value="<%= appointmentInfo.date %>" required />
                            <br>

                            <label for="time">Selected Time:</label>
                            <% if (appointmentInfo.time) { %> 
                                <input type="text" class="form-control" id="time" name="time" value="<%= appointmentInfo.time %>" disabled/>
                            <% } %>  
                            <div id="timeButtons" class="form-group">
                                <!-- Time slot buttons will be here -->  
                            </div>
                        <% } %>
                    </div>
            
                    <br>
                    
                    <button id="g2StoreDriveBtn" type="submit" class="btn btn-primary">SEND</button>
                </form>
            </div>
        </main>

        <%- include('layouts/footer'); -%>

        <%- include('layouts/scripts'); -%>

        <!-- <script>
            $(document).ready(function () {
                $('#date').on('change', function () {
                    console.log('date was changed');
                });
            });
        </script> -->
    </body>
</html>
